@page
@model Library.Pages.Students.EditModel
@{
}


<br>
<h2>Edit Client</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="ID" value="@Model.studentRecord.ID" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Book Title</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="BookTitle" value="@Model.studentRecord.BookTitle" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Author Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="AuthorName" value="@Model.studentRecord.AuthorName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Student Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="StudentNumber" value="@Model.studentRecord.StudentNumber" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cell Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CellNumber" value="@Model.studentRecord.CellNumber" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Parent's Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ParentNumber" value="@Model.studentRecord.ParentNumber" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Home Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="HomeAddress" value="@Model.studentRecord.HomeAddress" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Campus Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CampusName" value="@Model.studentRecord.CampusName" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="StudentsRecords" role="button">Cancel</a>
        </div>
    </div>
</form>